[urgency_low]
    frame_width = 3
    frame_color = "#fff500"
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 10
    #icon = /path/to/icon

[urgency_normal]
    frame_width = 3
    frame_color = "#fff500"
    background = "#282828"
    foreground = "#fbf1c7"
    timeout = 15
    #icon = /path/to/icon

[urgency_critical]
    frame_width = 3
    background = "#900000"
    foreground = "#ffffff"
    frame_color = "#ff0000"
    timeout = 20
    #icon = /path/to/icon

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[global]
    monitor = 0
    follow = mouse
    geometry = "500x200-20+30" # [{width}]x{height}[+/-{x}+/-{y}]
    indicate_hidden = yes
    shrink = yes
    transparency = 0
    notification_height = 0
    separator_height = 8
    padding = 8
    horizontal_padding = 8
    separator_color = frame
    sort = yes
    idle_threshold = 120
    show_age_threshold = 60

    font = Monospace 12
    line_height = 14
    alignment = left
    markup = full
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    format = "<b>%s</b>\n%b"

    icon_position = off
    max_icon_size = 32
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

    sticky_history = yes
    history_length = 20

    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/qutebrowser
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    force_xinerama = false

[experimental]
    per_monitor_dpi = false
